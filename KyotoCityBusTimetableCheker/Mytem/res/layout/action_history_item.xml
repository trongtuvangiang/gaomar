<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
	<ScrollView android:background="@drawable/form_background_shelf" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1">
		<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">
  			<LinearLayout android:orientation="vertical" android:padding="10.0dip" android:layout_width="fill_parent" android:layout_height="fill_parent">
  				<LinearLayout android:orientation="vertical" android:background="@drawable/roundrect_single_background" android:padding="10.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content">
  					<LinearLayout android:id="@+id/itemArea" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:visibility="gone">
						<TextView android:textSize="11.0dip" android:textColor="@color/green" android:gravity="left" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/item_name" />													
						<TextView android:textSize="11.0dip" android:textColor="@color/black" android:gravity="left" android:id="@+id/txt_itemname" android:layout_width="fill_parent" android:layout_height="wrap_content"   />
					</LinearLayout>	
  					<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
						<TextView android:textSize="11.0dip" android:textColor="@color/green" android:gravity="left" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/history_shopname" />													
						<TextView android:textSize="11.0dip" android:textColor="@color/black" android:gravity="left" android:id="@+id/txt_shopname" android:layout_width="fill_parent" android:layout_height="wrap_content"   />
					</LinearLayout>	
  					<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
						<TextView android:textSize="11.0dip" android:textColor="@color/green" android:gravity="left" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/history_price" />													
						<TextView android:textSize="11.0dip" android:textColor="@color/black" android:gravity="left" android:id="@+id/txt_price" android:layout_width="fill_parent" android:layout_height="wrap_content"   />
					</LinearLayout>	
  					<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
						<TextView android:textSize="11.0dip" android:textColor="@color/green" android:gravity="left" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/history_date_title" />													
						<TextView android:textSize="11.0dip" android:textColor="@color/black" android:gravity="left" android:id="@+id/txt_postdate" android:layout_width="fill_parent" android:layout_height="wrap_content"   />
					</LinearLayout>	
  					<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
						<TextView android:textSize="11.0dip" android:textColor="@color/green" android:gravity="left" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/history_note" />													
						<TextView android:textSize="11.0dip" android:textColor="@color/black" android:gravity="left" android:id="@+id/txt_note" android:layout_width="fill_parent" android:layout_height="wrap_content"   />
					</LinearLayout>							
  					<LinearLayout android:id="@+id/btnArea" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:visibility="gone">
  						<Button
							android:text="@string/item_title"
							android:id="@+id/itemButton"
							android:background="@drawable/btn_orange"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:onClick="onCreateClick"/>
					</LinearLayout>							
  				</LinearLayout>  				
			</LinearLayout>				
		</LinearLayout>		
  	</ScrollView>  	
</LinearLayout>